<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <item>
        <shape>
            <gradient
                android:angle="90"
                android:centerColor="@android:color/white"
                android:centerY="0.9"
                android:endColor="#44466790"
                android:startColor="@android:color/holo_red_dark" />
            <corners
                android:radius="25dp"/>
        </shape>
    </item>

    <item>
        <shape>
            <gradient
                android:angle="90"
                android:centerColor="@android:color/white"
                android:centerY="0.1"
                android:endColor="@android:color/transparent"
                android:startColor="#44466790" />
            <corners
                android:radius="25dp"/>
        </shape>
    </item>

</layer-list>

