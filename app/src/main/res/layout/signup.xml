<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/back2">

    <!--<ImageView-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="match_parent"-->
        <!--android:layout_centerHorizontal="true"-->
        <!--android:alpha="0.5"-->
        <!--android:scaleType="centerCrop"-->
        <!--android:src="@drawable/background1" />-->

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:overScrollMode="ifContentScrolls">

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentBottom="true"
            android:layout_margin="10dp"
            android:background="#000"
            app:cardBackgroundColor="@android:color/transparent"
            app:cardCornerRadius="5dp"
            app:cardElevation="3dp"
            app:cardUseCompatPadding="false">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="2dp"
                android:alpha="0.4"
                android:background="#000000"
                android:scaleType="center" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="40dp"
                android:gravity="center"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <com.septems.avinash.ngrid.utils.EditTextClearable
                        android:id="@+id/Name"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:background="@drawable/edit_text"
                        android:drawableLeft="@drawable/mt_user"
                        android:drawablePadding="15dp"
                        android:fontFamily="sans-serif"
                        android:gravity="center_vertical"
                        android:hint="Full Name"
                        android:maxLines="1"
                        android:paddingLeft="20dp"
                        android:paddingRight="15dp"
                        android:singleLine="true"
                        android:textColor="#99fefefe"
                        android:textColorHint="#99FFFFFF"
                        android:textSize="14sp" />

                    <com.septems.avinash.ngrid.utils.EditTextClearable
                        android:id="@+id/Email"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_marginTop="20dp"
                        android:background="@drawable/edit_text"
                        android:drawableLeft="@drawable/ic_email"
                        android:drawablePadding="15dp"
                        android:fontFamily="sans-serif"
                        android:gravity="center_vertical"
                        android:hint="Email"
                        android:inputType="textWebEmailAddress"
                        android:maxLines="1"
                        android:paddingLeft="20dp"
                        android:paddingRight="15dp"
                        android:singleLine="true"
                        android:textColor="#99fefefe"
                        android:textColorHint="#99FFFFFF"
                        android:textSize="14sp" />

                    <com.septems.avinash.ngrid.utils.EditTextClearable
                        android:id="@+id/Password"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_marginTop="20dp"
                        android:background="@drawable/edit_text"
                        android:drawableLeft="@drawable/ic_lock"
                        android:drawablePadding="15dp"
                        android:fontFamily="sans-serif"
                        android:gravity="center_vertical"
                        android:hint="Password"
                        android:inputType="textPassword"
                        android:maxLines="1"
                        android:paddingLeft="20dp"
                        android:paddingRight="15dp"
                        android:singleLine="true"
                        android:textColor="#99fefefe"
                        android:textColorHint="#99FFFFFF"
                        android:textSize="14sp" />

                    <com.septems.avinash.ngrid.utils.EditTextClearable
                        android:id="@+id/confirm_Password"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_marginTop="20dp"
                        android:background="@drawable/edit_text"
                        android:drawableLeft="@drawable/ic_lock"
                        android:drawablePadding="15dp"
                        android:fontFamily="sans-serif"
                        android:gravity="center_vertical"
                        android:hint="Confirm Password"
                        android:inputType="textPassword"
                        android:maxLines="1"
                        android:paddingLeft="20dp"
                        android:paddingRight="15dp"
                        android:singleLine="true"
                        android:textColor="#99fefefe"
                        android:textColorHint="#99FFFFFF"
                        android:textSize="14sp" />

                    <com.septems.avinash.ngrid.utils.ButtonTouchEffect
                        android:id="@+id/sign_up"
                        android:layout_width="wrap_content"
                        android:layout_height="40dp"
                        android:layout_gravity="center"
                        android:layout_marginTop="30dp"
                        android:alpha="0.5"
                        android:background="@drawable/back1"
                        android:gravity="center"
                        android:paddingBottom="10dp"
                        android:paddingLeft="30dp"
                        android:paddingRight="30dp"
                        android:paddingTop="10dp"
                        android:text="SIGN UP"
                        android:textColor="#99000000"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/have_account"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="30dp"
                        android:alpha="0.5"
                        android:background="@drawable/touch_effect_corner"
                        android:clickable="true"
                        android:padding="5dp"
                        android:text="@string/haveaccount"
                        android:textColor="#FFFFFF"
                        android:textSize="13sp" />
                </LinearLayout>
            </LinearLayout>
        </android.support.v7.widget.CardView>
    </ScrollView>

</RelativeLayout>